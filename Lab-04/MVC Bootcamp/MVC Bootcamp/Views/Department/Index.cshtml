@model IEnumerable<Department>
@* @{
    Layout = null;
} *@

<!DOCTYPE html>

    <table class="table table-bordered table-hover ">
        <thead>
            <tr>
                <th>ID</th>
                <th>Department Name</th>
            </tr>
        </thead>

        <tbody>
            @if(Model.Count() == 0)
            {
                <td colspan="2">
                    No Department
                </td>
            }
            else
            {
                @foreach(var i in Model)
                {   
                    <tr>
                        <td>
                            @i.DeptId
                           
                        </td>
                        <td>
                            @i.DeptName
                        </td>
                        <td>
                           @*  <a class="btn btn-secondary"  href="/department/details/@i.DeptId">Details</a>
                            <a class="btn btn-outline-info"  href="/department/edit/@i.DeptId">Edit</a>
                            <a class="btn btn-danger"  href="/department/delete/@i.DeptId" 
                            onclick="return confirm('Are you Surer to Delete @i.DeptName Department')">Delete</a> *@

                            @* Using TagHelper *@

                        <a asp-action="Details" asp-controller="Department" asp-route-id=@i.DeptId class="btn btn-secondary">Details</a>
                        <a asp-action="Edit" asp-controller="Department" asp-route-id=@i.DeptId class="btn btn-info">Edit</a>
                        <a asp-action="Delete" asp-controller="Department" asp-route-id=@i.DeptId class="btn btn-danger" onclick="return confirm('Are you Surer to Delete @i.DeptName Department')">Delete</a>


                        </td>
                    </tr>                    
                }
            }
        </tbody>


    </table>

    <a href="/department/create" class="btn btn-info">Create</a>
