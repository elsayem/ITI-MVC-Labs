@model IEnumerable<Student>
@{
    // Layout = null;
}


    <table class="table table-bordered table-hover ">
        <thead>
            <tr>
                <th>ID</th>
                <th>Student Name</th>
                <th>Age</th>
                <th>Department Name</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Count() == 0)
            {
            <td colspan="2">
                No Department
            </td>
            }
            else
            {
                @foreach (var i in Model)
                {
                <tr>
                    <td>@i.Id</td>
                    <td>
                            @i.Name
                           
                    </td> 
                    <td>
                            @i.Age
                           
                    </td>
                    <td>
                            @i.Department.DeptName
                           
                    </td>
                    <td>
                       @*  <a asp-action="Details" asp-controller="Department" asp-route-id=@i.DeptId class="btn btn-secondary">Details</a>
                        <a asp-action="Edit" asp-controller="Department" asp-route-id=@i.DeptId class="btn btn-info">Edit</a>
                        <a asp-action="Delete" asp-controller="Department" asp-route-id=@i.DeptId class="btn btn-danger" onclick="return confirm('Are you Surer to Delete @i.DeptName Department')">Delete</a>
 *@
                        <a asp-action="Edit" asp-controller="Student" asp-route-id ="@i.Id" class="btn btn-warning">Update</a>
                        <a asp-action="Delete" asp-controller="Student" asp-route-id ="@i.Id" class="btn btn-dangger">Delete</a>
                    </td>
                </tr>
                }   }


</table>